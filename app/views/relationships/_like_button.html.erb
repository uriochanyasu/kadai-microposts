<% if current_user.liking?(micropost) %>
    <%= form_for(current_user.relationships.find_by(micropost_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, @user.id %>
      <%= f.submit 'Unlikes', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :micropost_id, @user.id %>
      <%= f.submit 'Likes', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>